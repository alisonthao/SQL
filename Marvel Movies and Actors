--In this SQL code, I am creating seperate tables and using the JOIN function to display data from both tables--


--Create a table with a list of Marvel actors--

Create table marvel_actors
    (id INTEGER PRIMARY KEY AUTOINCREMENT,
    fullname TEXT,
    age INTEGER);
    
insert into marvel_actors (fullname, age) values ("Robert Downey Jr", "58");
insert into marvel_actors (fullname, age) values ("Chris Evans", 41);
insert into marvel_actors (fullname, age) values ("Scarlett Johansson", 38);
insert into marvel_actors (fullname, age) values ("Chris Hemsworth", 39);
insert into marvel_actors (fullname, age) values ("Tom Holland", 26);
insert into marvel_actors (fullname, age) values ("Benedict Cumberbatch", 46);



--Create a second table with a list of Marvel movies--

Create table marvel_movies
    (id INTEGER PRIMARY KEY AUTOINCREMENT,
    person_id INTEGER,
    movie_name TEXT,
    release_year INTEGER);
    
insert into marvel_movies (person_id, movie_name, release_year) values (1, "Iron Man", 2008);
insert into marvel_movies (person_id, movie_name, release_year) values (1, "The Avengers", 2012);
insert into marvel_movies (person_id, movie_name, release_year) values (2, "Captain America: The Winter Soldier", 2014);
insert into marvel_movies (person_id, movie_name, release_year) values (2, "Captain America: Civil War", 2016);
insert into marvel_movies (person_id, movie_name, release_year) values (3, "Black Widow", 2021);
insert into marvel_movies (person_id, movie_name, release_year) values (3, "Avengers: Age of Ultron", 2015);
insert into marvel_movies (person_id, movie_name, release_year) values (4, "Thor: Ragnarok", 2017);
insert into marvel_movies (person_id, movie_name, release_year) values (4, "The Avengers", 2012);
insert into marvel_movies (person_id, movie_name, release_year) values (5, "Spider-Man: Homecoming", 2017);
insert into marvel_movies (person_id, movie_name, release_year) values (5, "Avengers: Endgame", 2019);
insert into marvel_movies (person_id, movie_name, release_year) values (6, "Dr. Strange", 2016);
insert into marvel_movies (person_id, movie_name, release_year) values (6, "Avengers Infinity War", 2018);



--What movies are the actors in? (Ordered by the movie release date)--

select movie_name, fullname as actor_in_movie
from marvel_movies a
join marvel_actors b
on a.person_id = b.id
order by release_year;
